{
    "label": "pylint: whole project",
    "type": "shell",
    "command": "/usr/local/py-utils/bin/pylint --msg-template \"{path}:{line}:{column}:{category}:{symbol} - {msg}\" /workspaces/nes/patientregistrationsystem/qdc",
    "windows": {
        "command": "/usr/local/py-utils/bin/pylint --msg-template \"{path}:{line}: {column}:{category}:{symbol} - {msg}\" /workspaces/nes/patientregistrationsystem/qdc"
    },
    "presentation": {
        "reveal": "never",
        "panel": "shared"
    },
    "problemMatcher": {
        "owner": "python",
        "fileLocation": [
            "relative",
            "${workspaceFolder}"
        ],
        "pattern": {
            "regexp": "^(.+):(\\d+):(\\d+):(\\w+):(.*)$",
            "file": 1,
            "line": 2,
            "column": 3,
            "severity": 4,
            "message": 5
        }
    }
}