// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/postgres
{
	"name": "Python 3 & PostgreSQL",
	"dockerComposeFile": "docker-compose.yml",
	"service": "app",
	//"workspaceMount": "source=${localWorkspaceFolder}/nes, target=/nes, type=bind",
	"workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",
	// Features to add to the dev container. More info: https://containers.dev/features.
	// "features": {},
	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	// This can be used to network with other containers or the host.
	"forwardPorts": [
		80,
		5432,
		8000
	],
	"portsAttributes": {
		"80": {
			"label": "Limesurvey port",
			"onAutoForward": "notify"
		},
		"5432": {
			"label": "Postgres default port",
			"onAutoForward": "silent"
		},
		"8000": {
			"label": "NES default port",
			"onAutoForward": "openBrowserOnce"
		}
	},
	"containerEnv": {
		"NES_DIR": "/workspaces/${localWorkspaceFolderBasename}",
		"PG_DATA": "/var/lib/postgresql/data",
		"LIMESURVEY_DIR": "/var/www/limesurvey"
	},
	"remoteEnv": {
		//"TEST": "abc"
	},
	// Use 'postCreateCommand' to run commands after the container is created.
	"postCreateCommand": "sh $NES_DIR/.devcontainer/entrypoint.sh",
	"postStartCommand": "service apache2 start && a2dissite 000-default.conf && a2ensite limesurvey && service apache2 reload",
	"overrideCommand": false,
	"mounts": [
		//"source=${localWorkspaceFolder}/app-data,target=/data,type=bind,consistency=cached"
	],
	// Configure tool-specific properties.
	"customizations": {
		"vscode": {
			"extensions": [
				"mutantdino.resourcemonitor",
				"dbaeumer.vscode-eslint",
				"njpwerner.autodocstring",
				"redhat.fabric8-analytics",
				"batisteo.vscode-django",
				"VisualStudioExptTeam.vscodeintellicode",
				"VisualStudioExptTeam.intellicode-api-usage-examples",
				"ms-azuretools.vscode-docker",
				"ms-python.python",
				"ms-python.black-formatter",
				"ms-python.isort",
				"ms-python.vscode-pylance",
				"ms-python.pylint",
				"ms-python.flake8",
				"donjayamanne.python-extension-pack",
				"mrmlnc.vscode-apache",
				"mtxr.sqltools",
				"mtxr.sqltools-driver-pg"
			]
		}
	},

	// Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	"remoteUser": "root"
}